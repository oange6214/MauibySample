<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage
    x:Class="MauiApp2.Views.FlyoutDemo"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="FlyoutDemo"
    FlyoutLayoutBehavior="Popover">

    <FlyoutPage.Flyout>
        <ContentPage Title="My Flyout">
            <Label
                HorizontalTextAlignment="Center"
                Text="Flyout test"
                VerticalTextAlignment="Center" />
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <ContentPage>
            <Label
                HorizontalTextAlignment="Center"
                Text="Flyout Detail"
                VerticalTextAlignment="Center" />
        </ContentPage>
    </FlyoutPage.Detail>
</FlyoutPage>